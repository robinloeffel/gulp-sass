{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "moduleDetection": "force",
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["source"]
}
